		<dataSource>ИсточникДанных1</dataSource>
		<query>ВЫБРАТЬ
	ВКМ_ОсновныеНачисления.Сотрудник КАК Сотрудник,
	СУММА(ВКМ_ОсновныеНачисления.ФактДней) КАК ДнейОтгулял,
	ГОД(ВКМ_ОсновныеНачисления.ПериодДействия) КАК ГодОтпуска
ПОМЕСТИТЬ ВТ_ОтгуленныеОтпуска
ИЗ
	РегистрРасчета.ВКМ_ОсновныеНачисления КАК ВКМ_ОсновныеНачисления
ГДЕ
	ВКМ_ОсновныеНачисления.ВидРасчета = ЗНАЧЕНИЕ(ПланВидовРасчета.ВКМ_ОсновныеНачисления.Отпуск)
	И ГОД(ВКМ_ОсновныеНачисления.ПериодДействия) = &amp;ГодОтпуска

СГРУППИРОВАТЬ ПО
	ВКМ_ОсновныеНачисления.Сотрудник,
	ГОД(ВКМ_ОсновныеНачисления.ПериодДействия)
;

